<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('./partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
                <div class="jumbotron">
                    <h1>Movies</h1>
                    <p>Check out all the movies</p>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="well">
                    <h3>Look I'm A Sidebar!</h3>
                </div>
            </div>

            <% if (theMovie.length> 0) var movie=theMovie[0]; { %>
                <b>
                    <h1>Movie Title: </h1>
                    <%= movie.title %>
                        <br>
                        <h1>Movie Director: </h1>
                        <%= movie.director%>
                            <% } %>
                </b><br>


        </div>
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>

</body>

</html>