<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('./partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
                <div class="jumbotron">
                    <h1>Movies</h1>
                    <p>Check out all the movies</p>
                </div>
            </div>

            <b>
                <form action="/movies/<%= locals.anId %>?_method=PUT" method="POST">
                    <label>Replace movie title and director:
                        <input type="text" name="title" value="<%= title %>" required>
                        <input type="text" name="director" value="<%= director%>" required>
                    </label>
                    <button>Replace</button>
                </form>
                <a href="/movies"><button>Cancel</button></a>
            </b>
        </div>
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>

</body>

</html>